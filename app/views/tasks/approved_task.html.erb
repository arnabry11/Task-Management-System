<% content_for :title, "Approved Task" %>
<div class="row justify-content-center">
  <div class="col-12 col-xl-10">
    <div class="white-box bg-light">
      <div class="task-list">
        <div class="row justify-content-between">
          <div class="col-8 col-sm-4 col-md-4 col-lg-3 col-xl-3 text-left">
            <%=form_tag(approved_task_tasks_path, action: "approved_task", method: :get) do %>
              <div class="form-group row">
                <% priorities=["Low", "Medium", "High"]%>
                <span class="fa fa-filter col-1 col-sm-2 text-right"></span>
                <div class="col-10 col-sm-10 text-right">
                  <%= select_tag(:priority, options_for_select(priorities, params[:priority]), prompt:"All", class:"form-control custom-select select-center", id: "filter_input") %>
                </div>
              </div>  
            <% end %>
          </div>
          <% if current_user.hr %>
            <div class="col-4 col-sm-3 col-md-3 col-lg-3 col-xl-2 text-left">
              <%= link_to " Task List",print_task_list_tasks_path(format: "pdf"), target: "_blank", class: "fa fa-print btn btn-outline-primary" %>
            </div>
          <% end %>
          <div class="col-12 col-md-5 col-lg-6 col-xl-4">
            <%=form_tag approved_task_tasks_path, action: "index", method: :get do %>
              <%= render "layouts/search" %>
            <% end %>
          </div>
        </div>
          <div class="index-table">
            <%= render "tasks/task_list"%>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>