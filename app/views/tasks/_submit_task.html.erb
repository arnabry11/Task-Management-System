<div class="modal fade" id=<%= "popUpWindow#{task.id}" %>>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>
      <div class="modal-body">
        <div class="popup-wrapper">
          <div class="wrapper">
            <div class="card card-5">
              <div class="card-body">
                <h1 class="title text-center">SUBMIT TASK</h1>
                <%= form_for task, url: submit_task_tasks_path, html: {multipart: true}, method: :get do |form| %>
                  <div class="form-group row">
                    <div class="col-sm-4">
                      <%= form.label :document, "Attach file", for: "document", class:"submit-modal-label"%>
                      <small class="note"> (*if required)</small>
                    </div>
                    <div class="col-sm-8">
                      <%= hidden_field_tag :task_id, task.id%>
                      <%= file_field_tag :document, class: "form-control attach-control"%>
                    </div>
                  </div>
                  <div class="form-group row">
                    <div class="col-sm-4">
                      <%= form.label :link, "Attach link", for: "document", class:"submit-modal-label"%>
                      <small class="note"> (*if required)</small>
                    </div>
                    <div class="col-sm-8">
                      <%= text_field_tag :link, "",for: "link", class: "form-control", placeholder: "Link to task document"%>
                    </div>
                  </div>
                  <div class="text-center">
                    <%= submit_tag "SUBMIT", class:"btn btn-primary btn-lg my-2 my-sm-0" %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
