<% content_for :title, "Search" %>
<h1 class="text-center">Search Result</h1>
<div class="page-wrapper">
  <div class="tasklist-wrapper">
    <div class="card card-6">
      <div class="card-body">
        <div class="task-list">
          <div class="index-table">
            <table class="table table-striped table-bordered table-hover table-dark" data-toggle="table">
              <caption class="text-center"> List of Tasks</caption>
              <thead>
                <tr class="yellow text-center">
                  <th scope= "col">#</th>
                  <th scope= "col">Task Name</th>
                  <th scope= "col">Category</th>
                  <th scope= "col">Priority</th>
                  <% if current_user.admin%>
                    <th scope= "col">Assigned To</th>
                  <% end %>
                  <th scope= "col">Assigned By</th>
                  <% if current_user.admin %>
                    <th scope= "col">Status</th>
                  <% else %>
                     <th scope= "col">Submit Task</th>
                  <% end %>
                  <th scope= "col"> Approval</th>
                  <th scope= "col">View Task</th>
                  <% if current_user.admin %>
                    <th scope= "col">Edit</th>
                    <th scope= "col">Delete</th>
                  <%end%>
                </tr>
              </thead>
              <% if @tasks.present? %> 
                <tbody id="task_table">
                  <% i=0 %>
                  <% @tasks.each do |searched_task| %>
                    <%task = Task.find(searched_task.id)%>
                    <tr class="green">
                      <td><%= i=i.to_i + 1 %></td>
                      <td class= "text-center"><%= task.task_name%></td>
                      <td class= "text-center"><%= task.category.name%></td>
                      <td id="priority" class= "text-center"><%= task.priority%></td>
                      <% if current_user.admin %>
                        <td class="text-center"><%= task.user.name %></td>
                      <% end %>
                      <td class="text-center"><%= task.assign_by.name %></td>
                      <td class="text-center">
                        <% if task.submit %>
                          Submitted
                        <%else%>
                          <% if current_user.admin %>
                            In Progress
                          <% else  %>
                            <%= link_to "SUBMIT", submit_task_task_path(task), data: { disable_with: "wait.." }, class:"btn btn-success"%>
                          <% end%>
                        <% end %>
                      </td>
                      <td class="text-center">
                        <% if task.approved%>
                          Approved
                        <% else %>
                          <% if current_user.admin || task.assign_task_by == current_user.id %>
                            <%= link_to "approve", approve_task_path(task),data: { disable_with: "wait..." }, class:"btn btn-success" if task.submit%>
                          <% else %>
                            <% if task.submit %>
                              Pending
                            <% end %>
                          <% end %>
                        <% end %>
                      </td>
                      <td class="text-center">
                        <%= link_to "", task_path(task.id), class:"fa fa-eye" %>
                      </td>
                      <% if current_user.admin %>
                        <td class="text-center">
                          <%= link_to "", edit_task_path(task.id), data: { disable_with: "..." }, class:"fa fa-edit" %>
                        </td> 
                        <td class="text-center">
                          <%= link_to "", task_path(task.id), data: {confirm: "Are you sure to delete?" }, method: :delete, data: { disable_with: "..." }, class:"fa fa-trash"%>
                        </td>
                      <% end %>
                    </tr>
                  <% end %>
                </tbody>
              <%else%>
                <tbody>
                  <tr>
                    <td colspan="13" class="text-center">No Record Found</td>
                  </tr>
                </tbody>
              <% end %> 
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>