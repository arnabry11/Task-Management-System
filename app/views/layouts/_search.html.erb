<%=form_tag elastic_search_tasks_path, method: :get do %>
  <div class="form-group row">
    <div class="col-12 col-lg-9 text-center">
      <%= text_field_tag :q, params[:q], placeholder: "Search for tasks..." , class:"form-control" %>
    </div>
    <div class="col-12 col-lg-3 submit-search text-center">
      <%= submit_tag "Search", class:"btn btn-outline-success" %>
    </div>
  </div>
<% end %>