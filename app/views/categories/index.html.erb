<% content_for :title, "Categories" %>
<h1 class="text-center"> Category List</h1>
<br />
<div class="page-wrapper">
  <div class="category-wrapper">
    <div class="card card-6">
      <div class="card-body">
        <div class="row">
          <div class="col-12 col-sm-6 text-center">
            <%= link_to  "Create Category", new_category_path, class: "btn btn-primary btn-lg" %>
          </div>
          <div class="col-12 col-sm-6 text-center">
            <%= link_to  "Back", user_dashboard_path, class: "btn btn-secondary btn-lg" %>
          </div>
        </div>
        <br/>
        <table class="table table-striped table-bordered table-hover table-dark">
          <caption class="text-center"> List of Employees</caption>
          <thead>
            <tr class="text-center">
              <th scope="col">#</th>
              <th scope="col"> Categories</th>
              <th scope="col">Edit</th>
              <th scope="col">Delete</th>
            </tr>
          </thead>
          <% if @categories.present? %>
            <tbody>
              <% @categories.each do |category|%>
                <tr>
                  <th scope="row"><%= @categories.index(category)+1 %></th>
                  <td><%= category.name%></td>
                  <td class="text-center">
                    <%= link_to "", edit_category_path(category), class:"fa fa-edit"%>
                  </td>
                  <td class="text-center">
                    <%= link_to "", category_path(category), data: {confirm: "Are you sure?" }, method: :delete, class:"fa fa-trash"%>
                  </td>
                </tr>
              <% end %>
            </tbody>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>