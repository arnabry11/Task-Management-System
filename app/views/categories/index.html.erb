<% content_for :title, "Categories" %>
<div class="row justify-content-center">
  <div class="col-12 col-md-11 col-lg-10 col-xl-9">
    <div class="white-box bg-light">
      <div class="row">
        <div class="col-12 col-sm-4 col-xl-3 text-left">
          <%= link_to  "Create Category", new_category_path, class: "btn btn-primary btn-lg" %>
        </div>
      </div>
      <br/>
      <table class="table table-striped table-bordered table-hover table-dark">
        <caption class="text-center"> List of Employees</caption>
        <thead>
          <tr class="text-center">
            <th scope="col">#</th>
            <th scope="col"> Categories</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
          </tr>
        </thead>
        <tbody>
          <% if @categories.present? %>
            <% @categories.each do |category|%>
              <tr>
                <th scope="row"><%= @categories.index(category)+1 %></th>
                <td><%= category.name%></td>
                <td class="text-center">
                  <%= link_to "", edit_category_path(category), class:"fa fa-edit"%>
                </td>
                <td class="text-center">
                  <%= link_to "", category_path(category), data: {confirm: "Are you sure?" }, method: :delete, class:"fa fa-trash"%>
                </td>
              </tr>
            <% end %>
          <% else %>
            <tr><td class="text-center align-middle">No Category Found</td></tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>